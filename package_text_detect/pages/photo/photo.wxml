<view class="page">
  <view>
    <camera 
      device-position="{{devicePosition}}" 
      flash="off" 
      binderror="error">
      <canvas canvas-id="canvas2d" class="canvas1"  disable-scroll="true"></canvas>
    </camera>
  </view>
  <view class="page__bd page__bd_spacing">
    <button type="primary" bindtap="takePhoto">{{btnText}}</button>
    <button type="default" bindtap="changeDirection" class="marginTop20">change camera direction</button>
  </view>
  
</view>